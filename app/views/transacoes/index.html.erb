<div class="container" style="margin-top: 20px;">
  <div class="row" style="border-style: solid; border-width: 3px 0px 3px 0px; border-color: #12d0d0; margin-bottom: 5px">
    <div class="col-12">
      <h5 style="margin-top: 0px; margin-bottom: 10px; color: #12d0d0;">
        Importar Arquivo
      </h5>

      <%= form_tag importar_path, style: 'text-align: center;', multipart: true do %>
        <div class="form-group">
          <label>Informe o arquivo:</label>
          <%= file_field_tag :arquivo %>
        </div>
        <%= submit_tag "Importar", style: 'float: right; margin-bottom: 10px;' %>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-12">
      <h5 style="margin-top: 0px; margin-bottom: 10px; color: #12d0d0;">
        Últimas Transações
      </h5>
      <div class="table-responsive">
        <table class="table table-striped table-sm" style="text-align: center;">
          <thead>
            <tr>
              <th style="text-align: center; border-top-width: 0px;">Loja</th>
              <th style="text-align: center; border-top-width: 0px;">Tipo</th>
              <th style="text-align: center; border-top-width: 0px;">Valor</th>
              <th class="d-none d-sm-table-cell" style="text-align: center; border-top-width: 0px;">Data/Hora</th>
              <th class="d-none d-sm-table-cell" style="text-align: center; border-top-width: 0px;">Beneficiário</th>
            </tr>
          </thead>
          <tbody>
              <%= render 'table_body_transacoes', ultimas_transacoes: @ultimas_transacoes %>
          </tbody>
        </table>
      </div>
      <%= link_to '<b>Visualizar Transações</b> <i class="fa fa-arrow-right" aria-hidden="true" style="margin-left: 5px;"></i>'.html_safe, mostrar_transacoes_path, style: "float: right; font-size: 16px; margin-bottom: 20px;" %>
    </div>
  </div>
</div>