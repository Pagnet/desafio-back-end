<div class="container text-center">
  <h1 class="h3 mb-3 font-weight-normal" style="color: #706b97; margin-top: 16px;">
    Altere seu Cadastro
  </h1>

  <% if @usuario.errors.any? %>
  	<div class="row" style="margin-bottom: 15px;">
  	  <div class="col-md-6 offset-md-3">
        <% @usuario.errors.each do |attribute, message| %>
          <div class="alert alert-danger" style="padding: 5px 20px 5px 20px; margin-bottom: 4px;">
          	<%= attribute %> <%= message %>
          </div>
        <% end %>
  	  </div>
	  </div>
  <% end %>
  
  <%= form_for @usuario do |usuario| %>
    <%= render 'fields', usuario: usuario, labelbtsubmit: "Salvar", urlbtvoltar: transacoes_path %>
  <% end %>
</div>

<%= javascript_pack_tag 'usuarios' %>